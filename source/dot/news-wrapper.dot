<div id="news-inner">
    <div class="loading-wrapper hide">
        <img src="/img/loader.light.bg.gif"/>
    </div>
    <div style="clear:both;" class="collection-wrapper">
        {{~it.collection :item:index}}
        <div class="item" data-link="{{=item.link}}">
            <div class="inner">
                <div class="thumbnail-wrapper">
                    <div style="background-image : url({{=item.image}})" class="thumbnail"></div>
                </div>
                <div class="content-wrapper">
                    <div style="direction : {{=item.direction}}" class="title">{{=item.title}}</div>
                    <div style="direction : {{=item.direction}}" class="content">{{=item.shortContent}}</div>
                    <div style="direction : {{=item.direction}}" class="meta">
                        <span style="color : {{=item.color}}" class="source">{{=item.from[0].name}} &nbsp;</span>
                        <span class="time">&nbsp;{{=item.niceDate}}</span>
                    </div>
                    <div class="read-more">
                        <a href="{{=item.link}}" target="_blank">READ MORE...</a>
                    </div>
                </div>
            </div>
        </div>
        {{~}}
    </div>
</div>
